{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SnapPaste",
  "version": "1.5.1",
  "identifier": "com.snappaste.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1500",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "SnapPaste",
        "width": 264,
        "height": 421,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}